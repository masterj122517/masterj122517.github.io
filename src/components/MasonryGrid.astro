---
import type { CollectionEntry } from 'astro:content';
import PostCard from './PostCard.astro';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;
---

<section class="columns-1 md:columns-2 lg:columns-3 xl:columns-4 gap-6">
  {posts.map((post) => (
    <PostCard post={post} />
  ))}
</section>
